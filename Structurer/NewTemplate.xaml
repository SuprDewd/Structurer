<Window x:Class="Structurer.NewTemplate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Template" Height="377" Width="419" Background="Gray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Foreground="White" Margin="5">Template Name:</Label>
        <TextBox Grid.Row="0" Height="22" Margin="10,30,10,0" VerticalAlignment="Top"></TextBox>
        <Label Grid.Row="1" Foreground="White" Margin="5">Contents:</Label>
        <TextBox Grid.Row="1" Margin="10,30,10,0"></TextBox>
    </Grid>
</Window>